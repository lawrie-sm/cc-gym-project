<h2><%= @location.name %></h2>

<p>Capacity: <%= @location.capacity %></p>

<a href="/locations/<%= @location.id %>/edit">Edit</a>

<form action="/locations/<%= @location.id %>/delete" method="post">
  <button type="submit" name="id" value="<%= @location.id %>">Delete</button>
</form>

<p>The following events are taking place at this location:</p>
<% @location.events.each do |e| %>
  <p>
    <a href="/events/<%= e.id %>"><%= e.name %></a> - <%= e.description %> - <%= e.time %>
  </p>
<% end %>
