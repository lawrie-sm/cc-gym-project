<h2>Edit <%= @event.name %></h2>

  <label for="name">Name</label>
  <input id="Name" type="text" name="name" value="<%= @event.name %>">

  <label for="description">Description</label>
  <textarea id="description" name="description" rows="4" cols="40"><%= @event.description %></textarea>

  <!-- "yyyy-MM-ddThh:mm" -->
  <label for="time">Time</label>
  <input id="time" type="datetime-local" name="time" value="<%= @event.html_time_string %>">

  <button type="submit">Update Event</button>
</form>
