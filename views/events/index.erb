<h2>Events</h2>
<a href="/events/new">Add event +</a>

<div class="item-container">
  <% @events.each do |e| %>
    <div class="item">
      <div class="item-row">
        <a href="/events/<%= e.id %>"><%= e.name %></a>
        <p class="greyed"><%= e.print_date %> <%= e.print_time %> </p>
      </div>
      <div class="item-row">
        <p><%= e.description %></p>
        <p><span class="greyed formal-name"><%= e.location.name %></span></p>
      </div>
      <div class="item-row reversed-row">
        <p class="greyed"> <%= e.members.count %> / <%= e.location.capacity %> spaces</p>
      </div>
    </div>
  <% end %>
</div>
