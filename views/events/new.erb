<h2>Add a new event</h2>

<form action="/events" method="post">
  <label for="name">Name</label>
  <input id="Name" type="text" name="name">

  <label for="description">Description</label>
  <textarea id="description" name="description" rows="4" cols="40"></textarea>

  <label for="location">Location</label>
  <select id="location" name="location_id">
    <% @locations.each do |l| %>
       <option value="<%= l.id %>"> <%= l.name %> - <%= l.capacity %> </option>
    <% end %>
  </select>

  <label for="start-time">Time</label>
  <input id="start-time" type="datetime-local" name="start_time">
  <label for="h">h</label>
  <input id="h" type="number" name="hours" min="0" value="1">
  <label for="m">m</label>
  <input id="m" type="number" name="mins" min="0" value="0">

  <button type="submit">Create Event</button>
</form>
