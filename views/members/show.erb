<div class="row align-end">
  <a href="/members/<%= @member.id %>/edit"><i class="material-icons">settings</i></a>
  <h2><%= @member.print_name %></h2>
</div>
<p><strong><%= @member.membership.capitalize %> member</strong></p>

<hr>



<% unless @member.events.count.zero? %>
  <h4>Event List</h4>
  <ul class="item-list">
    <% @member.events.each do |e| %>
    <li>
      <a href="/events/<%= e.id %>"><%= e.name %></a> - <%= e.print_date %>
    </li>
    <% end %>
  </ul>
<% else %>
<p><em  class="greyed">This member is not attending any events.</em></p>
<% end %>
